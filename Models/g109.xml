<?xml version="1.0"?>

<PropertyList>

  <path>g109.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>fuselage</object-name>
    <object-name>ailes</object-name>
    <object-name>derive</object-name>
    <object-name>direction</object-name>
    <object-name>profondeur</object-name>
    <object-name>roueA</object-name>
    <object-name>roueG</object-name>
    <object-name>roueD</object-name>
    <object-name>bol</object-name>
    <object-name>helice</object-name>
    <object-name>pilote</object-name>
    <object-name>passager</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>spoilerG</object-name>
    <object-name>spoilerD</object-name>
    <object-name>caches</object-name>
    <object-name>tourporteG</object-name>
    <object-name>tourporteG</object-name>
    <object-name>phare</object-name>
    <object-name>basbeacon</object-name>
    <object-name>antenne</object-name>
    <object-name>axeA</object-name>
    <object-name>axeB</object-name>

    <!-- Objets transparents -->
    <object-name>verre</object-name>
    <object-name>verreR</object-name>
    <object-name>verreG</object-name>
    <object-name>verreporteG</object-name>
    <object-name>verreporteG</object-name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>verre</object-name>
    <object-name>verreR</object-name>
    <object-name>verreG</object-name>
    <object-name>verreporteG</object-name>
    <object-name>verreporteG</object-name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
  </animation>

  <!-- Intérieur -->
  <model>
    <path>Aircraft/Grob-G109/Models/Interior/interior.xml</path>
    <offsets>
      <x-m> -1.872 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.095 </z-m>
    </offsets>
  </model>

  <!-- Pilote -->
  <model>
    <path>Aircraft/Grob-G109/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -2.057 </x-m>
      <y-m> -0.257 </y-m>
      <z-m> -0.292 </z-m>
    </offsets>
  </model>

  <!-- Une ombre pour OSG -->
  <model>
    <name>shadowOSG</name>
    <path>Aircraft/Grob-G109/Models/shadow.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>shadowOSG</object-name>
    <condition>
      <equals>
        <property>sim[0]/rendering/shadows-ai</property>
        <value>true</value>
      </equals>
    </condition>
  </animation>

  <!-- L'hélice --> 
  <animation>
    <name>HeliceComplete</name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
    <object-name>helice</object-name>
    <object-name>bol</object-name>
  </animation>

  <!-- L'hélice --> 
  <!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdisc</object-name>
    <condition>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblur</object-name>
    <condition>
    <and>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>600.000</value>
      </greater-than>
      <less-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500.001</value>
      </less-than>
    </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>helice</object-name>
    <condition>
      <less-than>
        <property>engines/engine[0]/rpm</property>
	<value>1500</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>HeliceComplete</object-name>
    <property>engines/engine[0]/rpm</property>
    <factor> 1 </factor>
    <center>
      <x-m> -3.842 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.209 </z-m>
    </center>
    <axis>
      <x> -1.000 </x>
      <y>  0.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <!-- Gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>direction</object-name>
    <property>controls/flight/rudder</property>
    <factor>20</factor>
    <axis>
      <x1-m>  3.061 </x1-m>
      <y1-m>  0.000 </y1-m>
      <z1-m> -0.305 </z1-m>
      <x2-m>  3.717 </x2-m>
      <y2-m>  0.000 </y2-m>
      <z2-m>  1.208 </z2-m>
    </axis>
  </animation>

  <!-- Gouverne de profondeur -->
  <animation>
    <type>rotate</type>
    <object-name>profondeur</object-name>
    <property>controls/flight/elevator</property>
    <factor>11</factor>
    <center>
      <x-m> 3.574 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 1.188 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <!-- Animations des ailerons -->
  <animation>
    <type>rotate</type>
    <object-name>aileronG</object-name>
    <property>surface-positions/left-aileron-pos-norm</property>
    <factor>15.0</factor>
    <axis>
      <x1-m> -1.539 </x1-m>
      <y1-m> -8.381 </y1-m>
      <z1-m> -0.003 </z1-m>
      <x2-m> -1.102 </x2-m>
      <y2-m> -4.491 </y2-m>
      <z2-m> -0.204 </z2-m>
    </axis>
  </animation> 

  <animation>
    <type>rotate</type>
    <object-name>aileronD</object-name>
    <property>surface-positions/right-aileron-pos-norm</property>
    <factor>15.0</factor>
    <axis>
      <x1-m> -1.102 </x1-m>
      <y1-m>  4.491 </y1-m>
      <z1-m> -0.204 </z1-m>
      <x2-m> -1.539 </x2-m>
      <y2-m>  8.381 </y2-m>
      <z2-m> -0.003 </z2-m>
    </axis>
  </animation>

  <!-- Aérofreins -->
  <animation>
    <type>rotate</type>
    <object-name>spoilerG</object-name>
    <property>surface-positions/speedbrake-pos-norm</property>
    <factor>50.0</factor>
    <axis>
      <x1-m> -1.527 </x1-m>
      <y1-m> -2.348 </y1-m>
      <z1-m> -0.199 </z1-m>
      <x2-m> -1.588 </x2-m>
      <y2-m> -3.773 </y2-m>
      <z2-m> -0.138 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>spoilerD</object-name>
    <property>surface-positions/speedbrake-pos-norm</property>
    <factor>50.0</factor>
    <axis>
      <x1-m> -1.588 </x1-m>
      <y1-m>  3.773 </y1-m>
      <z1-m> -0.138 </z1-m>
      <x2-m> -1.527 </x2-m>
      <y2-m>  2.348 </y2-m>
      <z2-m> -0.199 </z2-m>
    </axis>
  </animation>

  <!-- Compression -->
  <animation>
    <type>rotate</type>
    <object-name>roueG</object-name>
    <property>gear/gear[0]/compression-norm</property>
    <interpolation>
      <entry>
        <ind> 0.0 </ind>
        <dep> 0.0 </dep>
      </entry>
      <entry>
        <ind>  1.0 </ind>
        <dep> 10.0 </dep>
      </entry>
    </interpolation>
    <center>
      <x-m> -1.870 </x-m>
      <y-m> -0.900 </y-m>
      <z-m> -1.160 </z-m>
    </center>
    <axis>
      <x> -1.000 </x>
      <y>  0.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>roueD</object-name>
    <property>gear/gear[1]/compression-norm</property>
    <interpolation>
      <entry>
        <ind> 0.0 </ind>
        <dep> 0.0 </dep>
      </entry>
      <entry>
        <ind>  1.0 </ind>
        <dep> 10.0 </dep>
      </entry>
    </interpolation>
    <center>
      <x-m> -1.870 </x-m>
      <y-m>  0.900 </y-m>
      <z-m> -1.160 </z-m>
    </center>
    <axis>
      <x> -1.000 </x>
      <y>  0.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>roueA</object-name>
    <object-name>axeA</object-name>
    <property>gear/gear[2]/compression-norm</property>
    <interpolation>
      <entry>
        <ind>  0.0 </ind>
        <dep> -0.1 </dep>
      </entry>
      <entry>
        <ind> 1.000 </ind>
        <dep> 0.150 </dep>
      </entry>
    </interpolation>
    <axis>
      <x>  2.555 </x>
      <y>  0.000 </y>
      <z> -0.420 </z>
    </axis>
  </animation>

  <!-- Rotation de la roulette de queue en fonction de la gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>roueA</object-name>
    <object-name>axeA</object-name>
    <object-name>axeB</object-name>
    <property>controls/flight/rudder</property>
    <factor> 20.0 </factor>
    <center>
      <x-m>  2.814 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.304 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 0.000 </y>
      <z> 1.000 </z>
    </axis>
  </animation>

  <!-- Rotation des roues lors du roulage -->
  <animation>
    <type>spin</type>
    <object-name>roueG</object-name>
    <property>gear/gear[1]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -1.870 </x-m>
      <y-m> -0.900 </y-m>
      <z-m> -1.160 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y> -1.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueD</object-name>
    <property>gear/gear[1]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -1.870 </x-m>
      <y-m>  0.900 </y-m>
      <z-m> -1.160 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y> -1.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueA</object-name>
    <property>gear/gear[2]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m>  2.814 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.545 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y> -1.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <!-- Canopy -->
  <animation>
    <type>rotate</type>
    <object-name>tourporteG</object-name>
    <object-name>verreporteG</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor> -90 </factor>
    <center>
      <x-m> -1.690 </x-m>
      <y-m> -0.171 </y-m>
      <z-m>  0.463 </z-m>
    </center>
    <axis>
      <x> 1.000 </x>
      <y> 0.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>tourporteD</object-name>
    <object-name>verreporteD</object-name>
    <property>instrumentation/doors/passenger/position-norm</property>
    <factor> 90 </factor>
    <center>
      <x-m> -1.690 </x-m>
      <y-m>  0.171 </y-m>
      <z-m>  0.463 </z-m>
    </center>
    <axis>
      <x> 1.000 </x>
      <y> 0.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <!-- Effets luminueux -->
  <model>
    <path>Aircraft/Grob-G109/Models/light/beacon.xml</path>
    <offsets>
      <x-m> 3.106 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 1.292 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/Grob-G109/Models/light/RedLight.xml</path>
    <offsets>
      <x-m> -2.023 </x-m>
      <y-m> -8.606 </y-m>
      <z-m>  0.006 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/Grob-G109/Models/light/GreenLight.xml</path>
    <offsets>
      <x-m> -2.023 </x-m>
      <y-m>  8.606 </y-m>
      <z-m>  0.006 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/Grob-G109/Models/light/phare.xml</path>
    <offsets>
      <x-m> -3.626 </x-m>
      <y-m> -0.228 </y-m>
      <z-m> -0.448 </z-m>
    </offsets>
  </model>

</PropertyList>
